<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Thavyra.styles.css" asp-append-version="true"/>
</head>
<body>

<div class="flex flex-col w-full sm:max-w-[500px] h-full sm:h-auto sm:rounded-lg overflow-hidden sm:shadow-xl bg-dark-800 text-light">
    <main id="main" class="grow px-10 pt-10">
        @RenderBody()
    </main>
    <footer class="bg-dark-900 border-t border-dark-700 mt-5 p-5 text-center">
        Thavyra
    </footer>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>